<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabbitTracker.AddHabitPage"
             Title="AddHabitPage">
    <StackLayout Padding="20">
        <Label Text="Habit Name" FontSize="24" TextColor="MidnightBlue" />
        <Entry x:Name="HabitNameEntry" FontSize="20" Placeholder="Enter habit name" />

        <Button Text="Save" FontSize="20" BackgroundColor="MidnightBlue" TextColor="White" Clicked="SaveHabit" />
    </StackLayout>
</ContentPage>